            "body": {
              "mode": "raw",
              "raw": "{\n  \"manualData\": {\n    \"title\": \"Custom Beach Location\",\n    \"description\": \"Beautiful secluded beach perfect for romantic scenes\",\n    \"coordinates\": { \"lat\": 8.5241, \"lng\": 76.9366 },\n    \"region\": \"Trivandrum, Kerala\",\n    \"permits\": [\n      { \"name\": \"Beach Access Permit\", \"required\": true, \"notes\": \"Required from tourism department\" }\n    ],\n    \"images\": [\"https://example.com/beach1.jpg\"],\n    \"tags\": [\"beach\", \"romantic\", \"secluded\"]\n  }\n}"
